procedure TForm6.Button1Click(Sender: TObject);
begin
case x  of
0:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
1:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
2:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
