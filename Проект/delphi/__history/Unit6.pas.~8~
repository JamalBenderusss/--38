5:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
6:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
7:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
8:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
9:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
10:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
11:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
12:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
13:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
14:if mas[x]=1 then  showmessage('Вы попали,Поздравляю!!!') else showmessage('Вы промохнулись!');
end;


end;

procedure TForm6.FormCreate(Sender: TObject);

begin
n:=1;
x:=0;
for i := 1 to 15 do
begin
mas[i]:=random(2);
end;
end;

